<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h5>Upcoming events</h5>
<%= attending_for_event %>

<h5>Previously attended events</h5>
<%= attending_past_event %>

<%= link_to 'New Event', new_event_path %>
